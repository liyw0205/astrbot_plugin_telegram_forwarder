{
    "enabled": {
        "description": "是否启用插件",
        "type": "bool",
        "default": true
    },
    "enable_forward_to_qq": {
        "description": "开启 QQ 转发",
        "type": "bool",
        "default": true,
        "hint": "是否将消息转发到 QQ 群"
    },
    "enable_forward_to_tg": {
        "description": "开启 TG 转发",
        "type": "bool",
        "default": false,
        "hint": "是否将消息转发到目标 Telegram 频道"
    },
    "api_id": {
        "description": "App API ID",
        "type": "int",
        "default": 0,
        "hint": "从 my.telegram.org 获取，例如 123456"
    },
    "api_hash": {
        "description": "App API Hash",
        "type": "string",
        "default": "",
        "hint": "从 my.telegram.org 获取"
    },
    "phone": {
        "description": "手机号",
        "type": "string",
        "default": "",
        "hint": "登录用的手机号（国际格式，如 +86138...），首次运行时需要。"
    },
    "source_channels": {
        "description": "源频道用户名列表",
        "type": "list",
        "item_type": "string",
        "hint": "不需要加 @，例如 `GoogleNews`。必须是公开频道。",
        "default": [
            "heyTchuang"
        ],
        "obvious_hint": true
    },
    "check_interval": {
        "description": "检测间隔(秒)",
        "type": "int",
        "hint": "每隔多少秒检查一次新消息",
        "default": 60
    },
    "proxy": {
        "description": "代理地址",
        "type": "string",
        "hint": "访问 Telegram 需要代理，例如 http://127.0.0.1:7897",
        "default": "http://127.0.0.1:7897"
    },
    "bot_token": {
        "description": "TG Bot Token",
        "type": "string",
        "hint": "转发到 Telegram 目标频道时需要，从 @BotFather 获取",
        "default": ""
    },
    "target_channel": {
        "description": "TG 目标频道 ID",
        "type": "string",
        "hint": "接收消息的频道，例如 @my_channel_name 或 -100xxxxxxx",
        "default": ""
    },
    "target_qq_group": {
        "description": "QQ 目标群号",
        "type": "list",
        "item_type": "int",
        "hint": "转发到 QQ 群列表",
        "default": []
    },
    "forward_delay": {
        "type": "int",
        "default": 2,
        "description": "防刷屏/免打扰延迟 (秒)"
    },
    "file_hosting_url": {
        "description": "图床上传接口",
        "type": "string",
        "hint": "用于上传视频/大文件的图床接口 (如 Cloudflare Pages)",
        "default": ""
    },
    "napcat_api_url": {
        "description": "NapCat API 地址",
        "type": "string",
        "hint": "NapCat 的 HTTP API 地址",
        "default": "http://127.0.0.1:3000/send_group_msg"
    },
    "filter_keywords": {
        "type": "list",
        "item_type": "string",
        "description": "过滤关键词",
        "default": [],
        "hint": "包含这些关键词的消息将被自动丢弃（例如 VPN, NSFW）"
    },
    "filter_regex": {
        "type": "string",
        "description": "正则过滤",
        "default": "",
        "hint": "Python 正则表达式过滤。留空则不启用。"
    }
}